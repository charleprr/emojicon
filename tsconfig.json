{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*"]
}
